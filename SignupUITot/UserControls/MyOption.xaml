<UserControl
    x:Class="SignupUITot.UserControls.MyOption"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="myOption"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Button Style="{StaticResource BtnOption}">
            <fa:ImageAwesome
                Width="15"
                Height="15"
                Foreground="White"
                Icon="{Binding ElementName=myOption, Path=Icon}" />
        </Button>

        <TextBlock
            Margin="10,0,20,0"
            VerticalAlignment="Center"
            FontWeight="SemiBold"
            Foreground="#363636"
            Text="{Binding ElementName=myOption, Path=text}" />
    </StackPanel>
</UserControl>
